/* app.wxss */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.card-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #eaeaea;
  font-weight: 600;
  color: #333;
}

.card-body {
  padding: 24rpx;
}

.status-dot {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  background-color: #999;
}

.status-dot.connected {
  background-color: #19be6b;
  box-shadow: 0 0 8rpx rgba(25, 190, 107, 0.4);
}

.status-dot.disconnected {
  background-color: #f03d3d;
  box-shadow: 0 0 8rpx rgba(240, 61, 61, 0.4);
}

.status-dot.connecting {
  background-color: #ff9900;
  box-shadow: 0 0 8rpx rgba(255, 153, 0, 0.4);
}

.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.input-field {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.button {
  width: 100%;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.button.primary {
  background-color: #2d8cf0;
  color: white;
  border: none;
}

.button.secondary {
  background-color: #f8f8f8;
  color: #666;
  border: 1rpx solid #eaeaea;
}

.button.danger {
  background-color: #f03d3d;
  color: white;
  border: none;
}

.button:active {
  opacity: 0.9;
}

.topic-list {
  max-height: 200rpx;
  overflow-y: auto;
}

.topic-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
}

.topic-item:last-child {
  border-bottom: none;
}

.topic-name {
  color: #333;
  flex: 1;
}

.remove-topic {
  color: #999;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  background: #f8f8f8;
}

.message-list {
  max-height: 400rpx;
  overflow-y: auto;
  background: #fafafa;
  border-radius: 8rpx;
}

.message-item {
  padding: 16rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
}

.message-item:last-child {
  border-bottom: none;
}

.message-topic {
  color: #666;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.message-content {
  color: #333;
  word-break: break-all;
}

.timestamp {
  color: #999;
  font-size: 22rpx;
  float: right;
}

.flex-row {
  display: flex;
  gap: 16rpx;
}

.flex-1 {
  flex: 1;
}